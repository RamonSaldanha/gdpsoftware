<div class="modal fade shadow" id="configModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered border-0 " role="document">
    <div class="modal-content border-0">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="exampleModalLabel">Configurações</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label>Pasta padrão de modelos</label>
        <div class="input-group">
          <input type="text" class="form-control" v-model="modelsFolder" readonly>
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" @click="changeModelsFolder()" type="button" id="button-addon2">Alterar</button>
          </div>
        </div>
        <label class="mt-2">Pasta padrão de documentos</label>
        <div class="input-group">
          <input type="text" class="form-control"  v-model="documentsFolder" readonly>
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" @click="changeDocumentsFolder()" type="button" id="button-addon2">Alterar</button>
          </div>
        </div>
      </div>
      <div class="modal-footer border-0">
        <button type="button" @click="saveConfigs()" class="btn btn-sm button">Salvar Mudanças</button>
      </div>
    </div>
  </div>
</div>